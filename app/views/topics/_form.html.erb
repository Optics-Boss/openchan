<div class="topic_form">
  <%= form_with model: [ board, board.topics.build ] do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
      <% board.topics.build.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </p>
    <p>
      <%= form.label :subject %><br>
      <%= form.text_field :subject %>
    </p>
    <p>
      <%= form.label :comment %>
      <%= form.text_area :comment, size:"70x5" %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>
